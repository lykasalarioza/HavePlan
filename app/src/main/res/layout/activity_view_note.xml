<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salarioza.haveplanui.ViewNote"
    android:background="@drawable/greenblue">

    <TextView
        android:id="@+id/noteviewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:text="Food parks"
        android:fontFamily="casual"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:textSize="20dp"
        android:layout_below="@+id/noteviewtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/border"
        android:text="The yard, StrEAT"
        android:textColor="#000"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="335dp"
        android:src="@drawable/dustbin"
        android:background="#00000"
        />
</RelativeLayout>
